{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "My config",
            "program": "${workspaceRoot}/target/debug/coreutils",
            "args": [
                "fmt",
                "-s",
                "-w1",
                "ru-file"
            ],
            "environment": [
                {
                    "name": "LC_ALL",
                    "value": "ru_RU.KOI8-R"
                }
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "rust: cargo build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "rust-gdb"
        },
        {
            "type": "cppdbg",
            "request": "attach",
            "name": "My config (attach)",
            "program": "${workspaceRoot}/target/debug/coreutils",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "rust-gdb"
        }
    ]
}
