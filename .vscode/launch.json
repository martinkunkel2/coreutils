{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "My config",
            "program": "${workspaceRoot}/target/debug/coreutils",
            "args": [
                "cp",
                "-a",
                "tmp/1234567890123456789012345678901234567890",
                "tmp/2"
            ],
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "rust: cargo build",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "rust-gdb"
        },
        {
            "type": "cppdbg",
            "request": "attach",
            "name": "My config (attach)",
            "program": "${workspaceRoot}/target/debug/coreutils",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": false
                }
            ],
            "miDebuggerPath": "rust-gdb"
        }
    ]
}
